<div class="container">
  <div class="row">
    <h2>editing of book</h2>
    <%= form_with model:@book, local:true do |f| %>
    <h3>title</h3>
    <%= f.text_field:title %>
    <h3>body</h3>
    <%= f.text_area:body %>
    <%= f.submit"Update book" %>
    <%= link_to "Show" ,book_path(@book.id), class:"btn btn-success" %>
     |
    <%= link_to "Back" ,books_path, class:"btn btn-danger" %>
    <% end %>
  </div>
</div>